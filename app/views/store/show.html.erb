<div class="w-full md:w-2/3 mx-auto pt-10"> 
  <h1 class="text-xl font-medium text-gray-800 mb-2"><%= @store.name %></h1>
  <div class="w-full bg-gray-100 p-4 flex justify-between mb-6">
    <p>SALDO TOTAL</p>
    <p class="font-medium"><%= @store.total_balance %></p>
  </div>

  <h3 class="font-medium text-lg text-gray-700 mb-4">Transações</h3>
  <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
      <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
          <tr>
            <th scope="col" class="px-6 py-3">
              Tipo
            </th>
            <th scope="col" class="px-6 py-3">
              Data
            </th>
            <th scope="col" class="px-6 py-3">
              Hora
            </th>
            <th scope="col" class="px-6 py-3">
              CPF
            </th>
            <th scope="col" class="px-6 py-3">
              Cartão de Crédito
            </th>
            <th scope="col" class="px-6 py-3">
              Valor
            </th>
          </tr>
        </thead>
        <tbody>
          <% @store.financial_records.each do |fr| %>
            <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700 border-gray-200">
              <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                <%= fr.transaction_description %>
              </th>
              <td class="px-6 py-4">
                <%= fr.formatted_date %>
              </td>
              <td class="px-6 py-4">
                <%= fr.transaction_time %>
              </td>
              <td class="px-6 py-4">
                <%= fr.cpf_number %>
              </td>
              <td class="px-6 py-4">
                <%= fr.card_number %>
              </td>
              <td class="px-6 py-4">
                <%= fr.formatted_amount %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
  <div class="mt-8">
    <%= link_to "Voltar", uploads_path, class: "bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded hover:cursor-pointer" %>
  </div>
</div>