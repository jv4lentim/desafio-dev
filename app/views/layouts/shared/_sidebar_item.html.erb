<%= link_to path,
    class: "mb-2 flex items-center gap-2 px-3 py-2 border border-gray-900 hover:border-gray-700 rounded-lg hover:bg-gray-700 text-gray-100 transition-colors duration-200 ease-in-out #{active ? 'bg-gray-700' : 'bg-transparent'}" do %>
  <span class="p-2 rounded-xl transition-colors duration-200 ease-in-out <%= active ? 'text-green-500 bg-gray-900' : 'text-gray-100 bg-green-500' %>">
    <%= icon %>
  </span>
  <p class="<%= active ? 'text-white' : 'font-normal' %>"><%= label %></p>
<% end %>
