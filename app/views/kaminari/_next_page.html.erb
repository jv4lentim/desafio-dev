<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<%= tag.li do %>
  <%= link_to_unless current_page.last?, raw('&raquo;'), url,
    rel: 'next',
    remote: remote,
    class: "flex items-center justify-center px-3 h-8 bg-white border border-gray-300 text-gray-500 hover:bg-gray-100" %>
<% end %>
